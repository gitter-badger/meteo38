// page

.page
    .map
        border: 1px solid #ccc
        background-color: #f6f6f6
        height: 400px
        border-radius: 2px
        padding: 1px
        margin-top: 10px
        margin-bottom: 10px
        position: relative

        .loading
            position: absolute
            top: 8px
            left: 12px
            color: #99b
            
        .map_coords
            position: absolute
            bottom: 8px
            left: 14px
            z-index: 100
            font-size: 12px

        .map_center
            position: absolute
            margin-left: -16px
            margin-top: -16px
            top: 50%
            left: 50%
            z-index: 100
            color: #a22
            opacity: 0.7
            font-size: 32px



.marker-info
    background: #fafafa
    padding: 2px 6px
    font-size: 13px
    line-height: 16px

    .nick
        font-weight: bold
        color: #00a

    .dt
        color: #600

    .save
        margin: 4px
        text-align: center
   

