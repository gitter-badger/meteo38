.page
    
    .help_banner
        display: none
        border-radius: 3px
        border: 1px solid #6b6
        background-color: #cfe
        padding: 4px 8px
        margin: 4px 6px 6px 6px

        .glyphicon-arrow-down
            float: left
            margin: 3px 6px 0 0

        .glyphicon-remove
            float: right
            cursor: pointer
            color: #aaa
            margin: 3px -2px 2px 6px

    .btn_refresh
        margin-right: 8px

    .btn_help
        margin-left: 8px

    .favs
        margin-top: 10px

        .item
            margin-bottom: 4px
            background-color: #f9fafc
            border-radius: 4px
            padding: 1px 10px 2px 10px
            cursor: pointer

            .data
                font-size: 20px
                margin-top: 4px
                margin-left: 6px
                color: #888
                .t
                    position: relative
                i
                    font-style: inherit
                    margin-left: 2px
                    margin-right: 1px
            .pos
                color: #a40
            .zer
                color: #555
            .neg
                color: #04d

            .arr
                font-size: 15px
                position: relative
                top: -3px
                margin-left: 2px

            .text
                .title
                    font-size: 22px
                .descr
                    color: #888
                    margin-left: 16px
                .addr
                    color: #888
                    margin-left: 16px

            .graph
                .bar
                    margin: 2px 8px
                    height: 20px

        .item:hover
            background-color: #f0f4ff

