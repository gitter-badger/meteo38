// page

.page
    .favs
        margin: 0 auto 8px auto

        .item
            margin-bottom: 4px 

            .data
                font-size: 20px
                .t
                    color: #999
                    position: relative

                i
                    font-style: inherit
                    margin-left: 2px
                    margin-right: 1px
            .pos
                color: #a40
            .zer
                color: #555
            .neg
                color: #04d

            .arr
                font-size: 15px
                position: relative
                top: -3px
                // display: inline-block
                // margin-top: -4px

            .text
                .title
                    font-size: 22px
                .addr
                    color: #888

.page
    .map
        border: 1px solid #ccc
        background-color: #f6f6f6
        height: 400px
        border-radius: 2px
        padding: 1px
        margin-top: 10px
        margin-bottom: 10px
        position: relative

        .loading
            position: absolute
            top: 8px
            left: 12px
            color: #99b
            
        .map_coords
            position: absolute
            bottom: 8px
            left: 14px
            z-index: 100
            font-size: 12px

        .map_center
            position: absolute
            margin-left: -16px
            margin-top: -16px
            top: 50%
            left: 50%
            z-index: 100
            color: #a22
            opacity: 0.7
            font-size: 32px


