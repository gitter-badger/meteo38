extends layout

append head_scripts
    //- script(src="/inc/objs.js")

append page_scripts
    script(src="/inc/util.js")
    script(src="/inc/front.js")

block content

    .row
        .col-md-10
            button.pull-right.btn.btn-default.btn-xs.btn_refresh#btn_refresh
                span.glyphicon.glyphicon-refresh(
                    style="margin: 0 6px 0 1px; position: relative; top: 2px;" )
                span.hhmm #{hhmm}

        .favs.col-md-8.col-md-offset-2#fav_items
            //- .item
                .data.pull-right
                    .t
                        | <span class='neg'>-<i>6</i></span>&deg; <span class="arr pos">&uarr;</span>
                .text
                    .title Помяловского
                    .addr ул. Помяловского, д. 1"Б"
            //- .item
                .data.pull-right
                    .t
                        | <span class='pos'>+<i>2</i></span>&deg; <span class="arr neg">&darr;</span>
                .text
                    .title Аэропорт
                    .addr ул. Ширямова

            - var fav_ids = []
            each st in sts_data
                - fav_ids.push(st._id)
                //- duplicated in inc/front.coffee
                .item(id="favst_#{st._id}")
                    .data.pull-right
                        .t!= format_t(st.last, st.trends)
                    .text
                        .title #{st.title}
                        .addr #{st.descr || st.addr}
            script.
                window.fav_ids = !{JSON.stringify(fav_ids)};

    //- .buttons
        | show map

    //- .adv

    //- .mapblock

    hr 

    .row
        .b-stations.col-md-8.col-md-offset-2
            button.btn.btn-primary.btn-sm(id="btn_stlist") Метеостанции
                span.glyphicon.glyphicon-cog(
                    style="margin-left: 9px; position: relative; top: 2px;" )

            .stlist(id="stlist")

